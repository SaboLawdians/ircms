      //전화번호 - 추가
      function phoneNum(str) {
        var firstNum = str.substring(0, 3);
        var secondNum = str.substring(3, 7);
        var thirdNum = str.substring(7);
        return firstNum + '-' + secondNum + '-' + thirdNum;
      }

      //주민번호 - 추가
      function serialNum(str) {
        var firstNum = str.substring(0, 6);
        var secondNum = str.substring(6);
        return firstNum + '-' + secondNum;
      }

      // 3자리마다 콤마
      function comma(num) {
        console.log(typeof (num));
        var len, point, str, result, sign = "";
        var floatNum = parseFloat(num);
        console.log(floatNum);
        num = num + "";
        if (floatNum < 0 || num.indexOf('-') !== -1) { // -부호가 있는 숫자
          sign = "-";
        }
        num = num.replace('-', "");
        var integerNum = num.substring(0, num.indexOf('.'));
        var decimalNum = num.substring(num.indexOf('.'));
        if (integerNum != "") {
          point = integerNum.length % 3;
          len = integerNum.length;
          str = integerNum.substring(0, point);
          while (point < len) {
            if (str != "") str += ",";
            str += integerNum.substring(point, point + 3);
            point += 3;
          }
          return sign + str + decimalNum;
        } else {
          point = num.length % 3;
          len = num.length;
          str = num.substring(0, point);
          while (point < len) {
            if (str != "") str += ",";
            str += num.substring(point, point + 3);
            point += 3;
          }
          return sign + str;
        }
      }
    </script>
